# ===========================
# Unity WebGL Build .htaccess
# ===========================

<IfModule mod_mime.c>
  # --- Brotli compressed builds (.br) ---
  AddEncoding br .br
  AddType application/javascript .js.br
  AddType application/wasm .wasm.br
  AddType application/octet-stream .data.br
  AddType application/octet-stream .symbols.json.br

  # --- Gzip compressed builds (.gz) ---
  AddEncoding gzip .gz
  AddType application/javascript .js.gz
  AddType application/wasm .wasm.gz
  AddType application/octet-stream .data.gz
  AddType application/octet-stream .symbols.json.gz

  # --- Unity default (.unityweb) ---
  AddEncoding br .unityweb
  AddEncoding gzip .unityweb
  AddType application/javascript .js.unityweb
  AddType application/wasm .wasm.unityweb
  AddType application/octet-stream .data.unityweb
  AddType application/octet-stream .symbols.json.unityweb

  # --- Plain (uncompressed) wasm fallback ---
  AddType application/wasm .wasm
</IfModule>

# Allow CORS (Unity needs this sometimes)
<IfModule mod_headers.c>
  Header set Access-Control-Allow-Origin "*"
</IfModule>
